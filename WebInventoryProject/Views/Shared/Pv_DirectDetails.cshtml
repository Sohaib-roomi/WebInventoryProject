@using WebInventoryProject.ViewModel
@model InvMasterDetailViewModel


<table class="table" id="tblItem">
    <tr>
        <td>Item</td>
        <td>Unit</td>
        <td style="width:10%;">Qty</td>
        <td style="width:10%;">Rate</td>        

    </tr>

    <tbody id='container'>

        @foreach (var Item in Model.DemandLists)
        {
        <tr class="myrow">

            <td>@Html.EditorFor(x => Item.ItemName, new { htmlAttributes = new { @class="ItemName",id = "ItemName", disabled = "disabled", @readonly = "readonly" } })</td>
            <td>@Html.EditorFor(x => Item.unitName, new { htmlAttributes = new {id = "unitName", @class = "unitName", disabled = "disabled", @readonly = "readonly" } })</td>
            <td><input type="number" name="qty" style="width: 40px;" id="qty" ,class="qty"></td>
            <td><input type="number" name="Rate" style="width: 40px;" id="Rate" ,class="Rate"></td>
            <td>@Html.HiddenFor(x => Item.ItemId, new { htmlAttributes = new { @class = "ItemId"} })</td>
            <td>@Html.HiddenFor(x => Item.unitId, new { htmlAttributes = new { @class = "unitId"} })</td>

        </tr>

        }

    </tbody>

</table>

