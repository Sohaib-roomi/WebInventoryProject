@model IEnumerable<WebInventoryProject.Models.Supplier>
@using WebInventoryProject.Controllers

@{
    ViewBag.Title = "IndexOfSupplier";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" />
    <script type="text/javascript" src="//cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').dataTable();
        });
    </script>
</head>

<body>
    @if (Model == null)
    {
        <h2 class="title1">Not Record Found</h2>
    }
    else
    {
        <div id="page-wrapper">
            <div class="main-page login-page " style="width:90%;">
                <div class="widget-shadow">
                    <div class="login-body">
                        @Html.Partial("MessageAlert")
                        <h2 class="title1">Suppliers</h2>
                        <br />
                        <div class="pull-right">
                            @if (UserController.AllowSave == true)
                            {
                                <a class="btn btn-success" style="margin-bottom:10px" href="@Url.Action("Supplier", "Home")"><i class="fa fa-plus"></i>ADD</a>
                            }
                            else
                            {
                                <a class="btn btn-block disabled" style="margin-bottom:10px" href="@Url.Action("Supplier", "Home")"><i class="fa fa-plus"></i>ADD</a>
                            }

                        </div>
                        <div class="table_bordered" width="600px;">
                            <table class="table table-striped table-bordered" id="myTable">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Vendor)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.VendorCode)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Address)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CellNo)
                                        </th>

                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Vendor)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.VendorCode)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Address)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CellNo)
                                            </td>


                                            <td>
                                                @if (UserController.AllowSave == true)
                                                {
                                                    <button class="btn btn-xs btn-default"><i class="fa fa-pencil"> </i>@Html.ActionLink("Edit", "Supplier", new { SPId = item.SPId }, new { Style = "color:White" })</button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-xs btn-default disabled"><i class="fa fa-pencil"> </i>@Html.ActionLink("Edit", "Supplier", new { SPId = item.SPId }, new { Style = "color:White" })</button>
                                                }

                                                @if (UserController.AllowSave == true)
                                                {
                                                    <button class="btn btn-xs btn-danger"><i class="fa fa-trash"></i> @Html.ActionLink("Delete", "Delete", new { SPId = item.SPId }, new { Style = "color:White" })</button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-xs btn-danger disabled"><i class="fa fa-trash"></i> @Html.ActionLink("Delete", "Delete", new { SPId = item.SPId }, new { Style = "color:White" })</button>
                                                }

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>