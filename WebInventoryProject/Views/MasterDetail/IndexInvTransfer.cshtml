@model IEnumerable<WebInventoryProject.Models.invTransferMaster>

@{
    ViewBag.Title = "IndexInvTransfer";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}
<br />
<br />
<br />

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" />
    <script type="text/javascript" src="//cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').dataTable();
        });
    </script>
</head>
<body>
    <div>
        <a style="margin-right:30px" class="btn btn-primary pull-right" href="@Url.Action("InvTransferMasterDetail","MasterDetail")"><i class="fa fa-plus"></i> Add Transfer Order</a>
    </div>

    <div id="page-wrapper">
        <div class="main-page login-page " style="width:90%;margin-top:-25px;">
            <div class="widget-shadow">
                <div class="login-body bg-light">
                    @Html.Partial("MessageAlert")
                    <h2 class="title1">Transfer Master Detail</h2>
                    <br />
                    <div>
                      
                        <div class="table_bordered" width="600px;">
                            <table class="table table-striped table-bordered" id="myTable">
                                <thead>
                                    <tr>
                                        <th>
                                            Transfer No
                                        </th>
                                        <th>
                                            Transfer Date
                                        </th>
                                        <th>
                                            From Branch
                                        </th>
                                        <th>
                                            To Branch
                                        </th>
                                        <th>
                                            From Dept
                                        </th>
                                        <th>
                                            To Dept
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.trNo)
                                        </td>
                                        <td>
                                           @Html.DisplayFor(modelItem => item.trDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.settingBranch.branchName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.settingBr.branchName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.settingDepartment.departmentName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.settingDept.departmentName)
                                        </td>
                                        <td>
                                            <button class="btn btn-xs btn-default">@Html.ActionLink("View Details", "InvTransferDetails", new { trId = item.trId }, new { Style = "color:White" })</button>   |

                                        </td>
                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>







                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script type="text/javascript">
        function UpdateDetailData(demand_Id, itemName, unitName, qty, balance, stock) {
            $("#demand_Id").val(demand_Id);
            $("#itemName").val(itemName);
            $("#unitName").val(unitName);
            $("#qty").val(qty);
            $("#balance").val(balance);
            $("#stock").val(stock);

        }
</script>


