    //Collect Multiple Order List For Pass To Controller //BY ARTICLE


    //pass data from view to controller BY NOOR
    $('#saveDemand').click(function (e) {

        if ($('#prDate').val() == "" || $('#prNo').val() == "" || $('branchId').val() == "" || $('#departmentId').val() == "") return;
        alert('done if')
